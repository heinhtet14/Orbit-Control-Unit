uint8_t address[4] = { 0xC0, 0xC2, 0xC4, 0xC6 };
uint32_t adc_values[3];
uint8_t pinCfg = 0x01;
uint8_t transmit[6] = { "A$$17\r" };
uint8_t set_point_[6] = { "A    \r" };
uint8_t mass_flow_acceptor[7];
uint8_t mass_flow_;
uint8_t receive[49];
uint8_t x = 0;
